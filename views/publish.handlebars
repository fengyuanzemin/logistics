<div class="container">
    {{>header}}
    {{>alert}}
    <div class="row login-box">
        <div class="login col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <h4 class="login-header text-center">发布物流</h4>
            <form action="/admin/publish" method="POST" class="login-body" role="form">
                <input type="text" class="form-control" name="title" placeholder="物流标题" required
                       autocomplete="off" autofocus>
                <textarea name="describe" title="描述" class="form-control" cols="30" rows="4"></textarea>
                <input type="hidden" value="{{user.id}}" name="id">
                
                <input class="btn button-blue btn-block" type="submit" value="完成">
            </form>
        </div>
    </div>
</div>